package uz.consortgroup.course_service.controller;

import jakarta.validation.Valid;
import lombok.RequiredArgsConstructor;
import org.springframework.http.HttpStatus;
import org.springframework.http.MediaType;
import org.springframework.validation.annotation.Validated;
import org.springframework.web.bind.annotation.ModelAttribute;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.ResponseStatus;
import org.springframework.web.bind.annotation.RestController;
import uz.consortgroup.course_service.dto.request.video.BulkVideoUploadRequestDto;
import uz.consortgroup.course_service.dto.request.video.VideoUploadRequestDto;
import uz.consortgroup.course_service.dto.response.video.BulkVideoUploadResponseDto;
import uz.consortgroup.course_service.dto.response.video.VideoUploadResponseDto;
import uz.consortgroup.course_service.service.video.VideoUploadService;

import java.util.List;
import java.util.UUID;

@RestController
@RequiredArgsConstructor
@RequestMapping("api/v1/video")
@Validated
public class VideoController {
    private final VideoUploadService videoUploadService;

    @PostMapping(value = "/upload-video/{lessonId}", consumes = MediaType.MULTIPART_FORM_DATA_VALUE)
    @ResponseStatus(HttpStatus.CREATED)
    public VideoUploadResponseDto uploadVideo(@PathVariable UUID lessonId,
                                              @Valid @ModelAttribute VideoUploadRequestDto dto) {
        return videoUploadService.upload(lessonId, dto);
    }

    @PostMapping(value = "/upload-videos/{lessonId}", consumes = MediaType.MULTIPART_FORM_DATA_VALUE)
    @ResponseStatus(HttpStatus.CREATED)
    public BulkVideoUploadResponseDto uploadVideos(@PathVariable UUID lessonId, @Valid @ModelAttribute BulkVideoUploadRequestDto dto) {
        return videoUploadService.uploadVideos(lessonId, dto);
    }
}
